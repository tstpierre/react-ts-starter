{
  "name": "react-ts-starter",
  "version": "1.0.0",
  "description": "Boilerplate for creating a React application with TypeScript and Webpack",
  "main": "index.js",
  "scripts": {
    "build": "jest && webpack",
    "devserver": "webpack-dev-server -w --hot --inline --progress --history-api-fallback &",
    "test": "jest",
    "devtest": "jest --watch"
  },
  "keywords": [],
  "author": "Thomas St Pierre <thomas.j.stpierre@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/react": "0.0.0",
    "@types/react-dom": "^0.14.20",
    "@types/react-router": "^2.0.41",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^16.0.3",
    "@types/react-addons-test-utils": "^0.14.16",
    "@types/react-test-renderer": "^15.4.1",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "babel": "^6.5.2",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-harddisk-plugin": "0.0.2",
    "html-webpack-plugin": "^2.26.0",
    "jest": "^18.1.0",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.4.2",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "repository": "https://github.com/tstpierre/react-ts-starter.git",
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "testRegex": "/__tests__/.*\\.(ts|tsx|js|jsx)$",
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/jest-ts-preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/web/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/web/styleMock.js"
    }
  }
}
